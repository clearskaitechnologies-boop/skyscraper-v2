{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "preserve",
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*", "./*"]
    },
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "useUnknownInCatchVariables": false
  },
  "include": [
    "next-env.d.ts",
    "middleware.ts",
    "src/app/**/*.ts",
    "src/app/**/*.tsx",
    "src/middleware/**/*.ts",
    "src/middleware/**/*.tsx",
    "src/server/**/*.ts",
    "src/server/**/*.tsx",
    "src/modules/**/*.ts",
    "src/modules/**/*.tsx",
    "src/components/**/*.ts",
    "src/components/**/*.tsx",
    "src/client/**/*.ts",
    "src/client/**/*.tsx",
    "src/hooks/**/*.ts",
    "src/hooks/**/*.tsx",
    "src/types/**/*.ts",
    "src/types/**/*.tsx",
    "src/utils/**/*.ts",
    "src/utils/**/*.tsx",
    "src/db/**/*.ts",
    "src/db/**/*.tsx",
    "src/env/**/*.ts",
    "src/env/**/*.tsx",
    "src/config/**/*.ts",
    "src/config/**/*.tsx",
    "src/lib/**/*.ts",
    "src/lib/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    ".turbo",
    ".vercel",
    "prisma/**",
    "db/migrations/**",
    "e2e/**",
    "tests/**",
    "playwright/**",
    "scripts/**",
    "worker/**",
    "src/worker/**",
    "**/*.spec.ts",
    "**/*.test.ts",
    "_archive/**",
    "supabase/functions/**",
    "workers/**",
    "archive/**",
    "ARCHIVE_DEV_SCRIPTS/**",
    "functions/**",
    "test-quota-system.ts",
    "tools/**",
    "cli/**",
    "deprecated/**",
    "_app_deprecated/**",
    "src/_app_deprecated/**",
    "src/agents/**",
    "src/App.tsx",
    "src/main.tsx",
    "src/pages/**",
    "components/**",
    "src/components/_deprecated/**",
    "src/lib/_deprecated/**",

    "src/components/_wip/**",
    "src/app/api/_wip/**",
    "src/app/api/_disabled/**",
    "src/app/api/_deprecated/**",

    "src/lib/transfer/**",
    "src/lib/transformer/**",
    "src/lib/vision/**",
    "src/lib/zero-shot/**",
    "src/lib/xai/**",
    "src/lib/workflow/**",
    "src/lib/workflows/**",
    "src/lib/video/**",

    "trades-service/**"
  ]
}
