{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "src/app/**/page.tsx",
    "src/app/**/route.ts",
    "src/app/**/layout.tsx",
    "middleware.ts",
    "src/worker/**/*.ts"
  ],
  "project": ["src/**/*.{ts,tsx}", "lib/**/*.ts"],
  "ignore": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "__tests__/**",
    "tests/**",
    "playwright/**",
    "archive/**",
    "src/app/api/_disabled/**"
  ],
  "ignoreDependencies": [
    "@types/*",
    "typescript",
    "eslint-*",
    "prettier*",
    "@playwright/*",
    "vitest",
    "postcss",
    "tailwindcss",
    "autoprefixer"
  ],
  "next": {
    "entry": ["src/app/**/page.tsx", "src/app/**/route.ts"]
  }
}
