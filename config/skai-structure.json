{
  "$version": "0.1",
  "branding": {
    "required": true,
    "fallback": {
      "company_name": "",
      "brand_color": "#0A1A2F",
      "accent_color": "#117CFF",
      "footer": "Generated by SkaiScraper™ — All Rights Reserved"
    }
  },
  "plans": {
    "lite": { "features": ["proposal", "quick_pdf"], "token_multiplier": 1.0 },
    "pro": {
      "features": ["proposal", "claims", "damage", "weather", "codes", "carrier_export"],
      "token_multiplier": 0.9
    },
    "enterprise": {
      "features": [
        "proposal",
        "claims",
        "damage",
        "weather",
        "codes",
        "carrier_export",
        "dispatch",
        "share_links",
        "catalogs"
      ],
      "token_multiplier": 0.8
    }
  },
  "tokens": {
    "ai.summary": 3,
    "ai.captions": 1,
    "ai.codes": 5,
    "ai.weather": 2,
    "ai.mockup": 10
  },
  "reports": {
    "proposal": {
      "layout": "landscape",
      "sections": ["summary", "map", "photos", "vendor", "pricing", "footer"],
      "ai": ["ai.summary"],
      "addons": ["qr", "branding", "map"]
    },
    "claims": {
      "layout": "landscape",
      "sections": ["summary", "map", "damage", "photos", "weather", "codes", "footer"],
      "ai": ["ai.summary", "ai.codes", "ai.weather"],
      "addons": ["qr", "branding", "map", "weather", "codes"]
    },
    "damage": {
      "layout": "landscape",
      "sections": ["summary", "photos", "damage", "map", "footer"],
      "ai": ["ai.captions", "ai.summary"],
      "addons": ["qr", "branding", "map"]
    },
    "carrier": {
      "layout": "landscape",
      "sections": ["summary", "map", "footer"],
      "ai": [],
      "addons": ["qr", "branding", "map"],
      "export": ["pdf", "zip"]
    }
  },
  "ui_visibility": {
    "lite": ["proposal", "quick_pdf"],
    "pro": ["proposal", "claims", "damage", "carrier", "weather", "codes"],
    "enterprise": [
      "proposal",
      "claims",
      "damage",
      "carrier",
      "weather",
      "codes",
      "dispatch",
      "share_links",
      "catalogs"
    ]
  },
  "api_bindings": {
    "pdf.generate": "/api/pdf/generate",
    "ai.summary": "/api/ai/summary",
    "ai.captions": "/api/ai/captions",
    "ai.codes": "/api/ai/codes",
    "ai.weather": "/api/ai/weather"
  }
}
