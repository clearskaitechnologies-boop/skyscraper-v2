rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user owns the document
    function isUser(uid) { 
      return request.auth != null && request.auth.uid == uid; 
    }

    // User-specific collections - users can only access their own data
    match /users/{uid}/branding/{doc} { 
      allow read, write: if isUser(uid); 
    }
    
    match /users/{uid}/projects/{pid} { 
      allow read, write: if isUser(uid);
      
      // Nested subcollections under projects
      match /{subcollection=**} {
        allow read, write: if isUser(uid);
      }
    }
    
    match /users/{uid}/layoutPresets/{key} { 
      allow read, write: if isUser(uid); 
    }
    
    match /users/{uid}/reports/{rid} { 
      allow read, write: if isUser(uid); 
    }
    
    match /users/{uid}/evidence/{eid} { 
      allow read, write: if isUser(uid); 
    }

    // Vendor catalog - read-only for authenticated users, write via Functions only
    match /vendors/{vendorId} {
      allow read: if request.auth != null;
      allow write: if false; // Only Functions can write
      
      match /products/{productId} {
        allow read: if request.auth != null;
        allow write: if false; // Only Functions can write
      }
    }

    // Manufacturer catalog
    match /manufacturers/{manufacturerId} {
      allow read: if request.auth != null;
      allow write: if false; // Only Functions can write
      
      match /products/{productId} {
        allow read: if request.auth != null;
        allow write: if false; // Only Functions can write
      }
    }

    // Usage tracking (for quota system)
    match /users/{uid}/usage/{date} {
      allow read, write: if isUser(uid);
    }

    // Billing information
    match /users/{uid}/billing/{doc} {
      allow read, write: if isUser(uid);
    }

    // Default deny rule
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
